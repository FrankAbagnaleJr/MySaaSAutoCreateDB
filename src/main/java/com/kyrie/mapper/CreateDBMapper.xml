<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kyrie.mapper.CreateDBMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kyrie.pojo.CreateDbInfo">
        <id column="id" property="id" />
        <result column="db_schema_name" property="schemaName" />
        <result column="db_ip" property="ip" />
        <result column="db_port" property="port" />
        <result column="db_url" property="url" />
