        <result column="db_password" property="password" />
        <result column="db_driver_class" property="driverClass" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, db_schema_name, db_ip, db_port, db_url, db_username, db_password, db_driver_class
    </sql>

</mapper>
